@model Stock.Core.Entidades.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var backgroundImage = "~/images/Gerente.jpg";
}

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Producto" asp-action="Index">GestionStock.WebMVC</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Producto" asp-action="Index">Stock</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Compra" asp-action="Index">Compras</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Venta" asp-action="Index">Ventas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="Logout">Cerrar Sesión</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>


<div class="login-container">
    <div class="login-info">
        <h1>Eliminar Producto</h1>
        <form asp-action="EliminarProducto" asp-controller="Producto">
            <div class="contenedor">
                <input type="hidden" asp-for="ProductoId" />
                <div class="form-group">
                    <label>Nombre</label>
                    <input asp-for="Nombre" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label>Categoria</label>
                    <input asp-for="Categoria.Nombre" class="form-control" readonly />
                </div>

                <div class="contenedor button" style="height: 200px;">
                    <button type="submit" class="btn btn-tertiary btn-lg btn-red" style="width: 140px;">Eliminar</button>
                    <button asp-action="Index" asp-controller="Producto" class="btn btn-secondary btn-lg" style="width: 140px;">Volver</button>
                </div>
               
            </div>

        </form>

    </div>
    <div class="login-image">
        <img src="@Url.Content(backgroundImage)" alt="Login Image" width="400" />
    </div>

</div>